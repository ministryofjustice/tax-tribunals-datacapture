<% title t('.page_title') %>

<div class="grid-row">
  <div class="column-two-thirds">
    <h1 class="heading-large"><%= t '.heading' %></h1>

    <ul class="list task-list">
      <% @link_sections.each do |(name, minutes, path)| %>
        <li>
          <%= link_to t('.link_titles.%s' % name), path, class: 'task-link ga-pageLink', data: {ga_category: 'Type_app', ga_label: name} %>
          <%= content_tag(:p, t('.link_descriptions.%s' % name)) %>
          <%= content_tag(:p, t('.link_time_estimate', minutes: minutes)) unless minutes.zero? %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
