<% content_for(:homepage_url) { "/" } %>
<% content_for(:page_title) { "GOV.UK - Appeal to the tax tribunal" } %>

<% content_for(:head) do %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
<% end %>

<% content_for(:inside_header) do %>
  <div class="header-proposition">
    <div class="content">
      <a href="/" id="proposition-name">Appeal to the tax tribunal</a>
    </div>
  </div>
<% end %>

<% content_for(:content) do %>
  <main id="content" role="main">
    <div class="phase-banner-alpha">
      <p>
        <strong class="phase-tag">ALPHA</strong>
        <span>This is a trial service &ndash; your feedback will help us to improve it.</span>
      </p>
    </div>

    <% if flash[:alert] %>
      <div class="error-summary">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= yield %>
  </main>
<% end %>

<% if Rails.env.development? %>
  <% content_for(:footer_top) do %>
    <details>
      <summary><span class="summary">Debug Information</span></summary>
      <div class="panel panel-border-narrow">
        <% if @form_object&.tribunal_case %>
          <h4 class="heading-small">Current Case ID</h4>
          <p>
            <%= @form_object.tribunal_case.id %>
          </p>
        <% end %>
      </div>
    </details>
  <% end %>
<% end %>

<%= render template: "layouts/govuk_template" %>
