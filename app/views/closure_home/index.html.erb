<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l"><%= t('.heading') %></h1>

    <p class="govuk-body-l"><%= t('.lead_text') %></p>

    <%= t('.description_html',
          approval_form_href: asset_path('proforma.pdf'),
          approval_form_format_and_size: 'PDF, 47KB'
        )
    %>

    <p class="govuk-body">
      <%= link_to edit_steps_closure_case_type_path, class: 'govuk-button govuk-button--start', role: 'button' do %>
        <%= t('.continue') %>
        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
          <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
        </svg>
      <% end %>
    </p>
  </div>
</div>
