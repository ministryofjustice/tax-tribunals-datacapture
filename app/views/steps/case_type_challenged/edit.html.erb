<div class="grid-row">
  <div class="column-two-thirds">
    <p class="step-info util_mt-large util_mb-0">
      <%= link_to 'Back', edit_steps_did_challenge_hmrc_path, class: 'link-back' %>
      <%=t 'generic.step', step: 2, of: 4 %>
    </p>
    <h1 class="heading-large util_mt-0"><%=t '.heading' %></h1>

    <p class="lede"><%=t '.lead_text' %></p>

    <p><%=t '.description_text' %></p>

    <%= step_form @form_object do |f| %>
