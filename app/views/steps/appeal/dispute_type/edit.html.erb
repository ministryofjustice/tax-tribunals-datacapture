<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <%= step_form @form_object, html:{ class: 'ga-radioButtonGroup'  } do |f| %>
      <%= f.govuk_collection_radio_buttons :dispute_type,
        @form_object.choices, :to_s, nil,
        legend: { text: t('.heading'), size: 'l' }, hint: { text: t('.lead_text') } %>

      <div class="panel toggleable" id="dispute_type_other_value" aria-hidden="true" data-show-elements="form input:radio:last" data-hide-elements="form input:radio:not(:last)">
        <%= f.govuk_text_field :dispute_type_other_value, width: 'one-half' %>
      </div>

      <%= render partial: 'steps/shared/continue_or_save', locals: {f: f} %>
    <% end %>

  </div>
</div>
