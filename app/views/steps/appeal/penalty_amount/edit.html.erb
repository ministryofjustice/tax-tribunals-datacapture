<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <%= step_form @form_object, html:{ class: 'ga-radioButtonGroup'  } do |f| %>
      <%= f.govuk_collection_radio_buttons :penalty_level,
        Steps::Appeal::PenaltyAmountForm.choices, :to_s, nil,
         legend: { class: 'govuk-heading', text: t('.heading'), size: 'l'},
         hint_text: t('.lead_text')
      %>

      <div class="panel toggleable" id="penalty_amount_detail" aria-hidden="true" data-show-elements="form input:radio:not(:first)" data-hide-elements="form input:radio:first">
        <%= f.govuk_text_field :penalty_amount, width: 'one-half' %>
      </div>

      <%= render partial: 'steps/shared/continue_or_save', locals: {f: f} %>
    <% end %>

  </div>
</div>
