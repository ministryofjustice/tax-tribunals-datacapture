<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-l"><%=t '.heading' %></h1>

    <p class="govuk-body-l"><%=t '.lead_text' %></p>

    <%= step_form @form_object, html:{ class: 'ga-radioButtonGroup'  } do |f| %>
      <%= f.govuk_collection_radio_buttons :case_type,
        Steps::Appeal::CaseTypeShowMoreForm.choices, :to_s, nil,
        legend: { class: 'govuk-visually-hidden' }
      %>

      <div class="panel toggleable" id="case_type_other_value" aria-hidden="true" data-show-elements="form input:radio:last" data-hide-elements="form input:radio:not(:last)">
        <%= f.govuk_text_field :case_type_other_value, width: 'one-half' %>
      </div>

      <%= f.submit class: 'govuk-button' %>
    <% end %>

  </div>
</div>
