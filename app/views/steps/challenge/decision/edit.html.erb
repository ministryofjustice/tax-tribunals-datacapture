<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-l">
      <%=t @form_object.heading_translation_key %>
    </h1>

    <%= step_form @form_object, html:{ class: 'ga-radioButtonGroup'  } do |f| %>
      <%= f.govuk_collection_radio_buttons :challenged_decision,
        Steps::Challenge::DecisionForm.choices, :value, nil,
        legend: { class: 'visuallyhidden' }
      %>

      <%= render partial: 'steps/shared/continue_or_save', locals: {f: f} %>
    <% end %>

    <details class="govuk-details" data-module="govuk-details">
      <summary class="govuk-details__summary" aria-controls="details-content" aria-expanded="false">
        <span class="govuk-details__summary-text">
          <%=t '.help_panel.heading' %>
        </span>
      </summary>
      <div class="govuk-details__text">
        <%=t '.help_panel.content_html' %>
      </div>
    </details>
  </div>
</div>
