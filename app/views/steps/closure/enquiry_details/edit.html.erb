<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-l"><%=t '.heading' %></h1>

    <p class="govuk-caption-m"><%=t '.lead_text' %></p>

    <%= step_form @form_object do |f| %>
      <%= f.govuk_text_field :closure_hmrc_reference, width: 'one-half' %>
      <%= f.govuk_text_field :closure_years_under_enquiry, width: 3, suffix_text: 'years' %>
      <%= f.govuk_text_field :closure_hmrc_officer, width: 'one-half' %>
      <%= render partial: 'steps/shared/continue_or_save', locals: {f: f} %>
    <% end %>
  </div>
</div>
