<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-l"><%=t '.heading' %></h1>

    <p class="govuk-body-l"><%=t '.lead_text' %></p>

    <%= step_form @form_object, html:{ class: 'ga-radioButtonGroup' } do |f| %>
      <%= f.govuk_collection_radio_buttons :closure_case_type,
        Steps::Closure::CaseTypeForm.choices, :value, nil,
        legend: {class: 'visuallyhidden'} %>

      <%= f.submit class: 'govuk-button' %>
    <% end %>
  </div>
</div>
