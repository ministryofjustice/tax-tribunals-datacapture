<% title t('.page_title') %>

<div class="govuk-panel govuk-panel--confirmation">
  <h1 class="govuk-panel__title"><%= t '.case_submitted' %></h1>
  <div class="govuk-panel__body"><%= t '.confirmation_email' %></div>
</div>

<%= render partial: 'shared/confirmation_case_reference', locals: {tribunal_case: @tribunal_case} %>

<h2 class="govuk-heading-m">
  <%= link_to t('.save_or_print_pdf'), steps_details_check_answers_path(format: :pdf), target: '_blank', class: 'govuk-link' %>
</h2>

<div class="govuk-warning-text">
  <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
  <strong class="govuk-warning-text__text">
    <span class="govuk-warning-text__assistive"><%= t '.last_opportunity_warning' %></span>
    <%= t '.last_opportunity_warning_message' %>
  </strong>
</div>

<%= t '.what_happens_next_html', tax_tribunal_phone: Rails.application.config.tax_tribunal_phone  %>

<%= render partial: 'steps/shared/finish_button', locals: {name: t('shared.finish')} %>
