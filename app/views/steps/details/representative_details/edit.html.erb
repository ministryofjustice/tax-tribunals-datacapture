<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-l"><%=t '.heading' %></h1>

    <p class="govuk-caption-m"><%= translate_for_user_type '.lead_text' %></p>

    <%= step_form @form_object do |f| %>
      <% @form_object.name_fields.each do |name_field| %>
        <%= f.govuk_text_field name_field, width: 'one-half' %>
      <% end %>

      <%= address_lookup(record: @form_object, entity: :representative) do %>
          <%= f.govuk_text_area :representative_contact_address, class: 'govuk-textarea address' %>
          <%= f.govuk_text_field :representative_contact_city, width: 'one-half', class: 'govuk-input govuk-!-width-one-half city' %>
          <%= f.govuk_text_field :representative_contact_postcode, width: 'one-half', class: 'govuk-input govuk-!-width-one-half postcode' %>
          <%= f.govuk_text_field :representative_contact_country, width: 'one-half', class: 'govuk-input govuk-!-width-one-half country' %>
      <% end %>

      <% if @form_object.show_fao? %>
          <%= f.govuk_text_field :representative_organisation_fao, width: 'one-half' %>
      <% end %>
      <%= f.govuk_text_field :representative_contact_email, width: 'one-half' %>
      <%= f.govuk_check_box :representative_feedback_consent, :representative_feedback_consent, multiple: false, label: { text: t('.representative_feedback_consent_question'), size: 's', style: 'padding-top: 0;padding-bottom: 14px;font-weight: normal;' } %>

      <%= f.govuk_text_field :representative_contact_phone, width: 'one-half' %>
      <% if @form_object.show_registration_number? %>
          <%= f.govuk_text_field :representative_organisation_registration_number, width: 'one-half' %>
      <% end %>
      <%= render partial: 'steps/shared/continue_or_save', locals: {f: f} %>
    <% end %>
  </div>
</div>
