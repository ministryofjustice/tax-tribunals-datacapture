<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-l"><%= translate_with_appeal_or_application '.heading' %></h1>

    <%= step_form @form_object, html:{ class: 'gtm-radioButtonGroup'  } do |f| %>
      <%= f.govuk_collection_radio_buttons :user_type,
        Steps::Details::UserTypeForm.choices, :value, nil,
        legend: {class: 'govuk-visually-hidden'} %>

      <%= render partial: 'steps/shared/continue_or_save', locals: {f: f} %>
    <% end %>

    <%= render partial: 'steps/shared/representative_explanation' %>
  </div>
</div>

<% content_for(:javascripts) do %>
  <script type="text/javascript">
    $(document).ready(function () {
        moj.gtmDataLayerEvent.init('UserType_Form', 'userType');
      });
  </script>
<% end %>
