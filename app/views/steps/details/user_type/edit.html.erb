<% title t('.page_title') %>

<div class="grid-row">
  <div class="column-two-thirds">
    <%= step_header %>

    <h1 class="heading-large"><%= translate_with_appeal_or_application '.heading' %></h1>

    <%= step_form @form_object, html:{ class: 'gtm-radioButtonGroup'  } do |f| %>
      <%= f.radio_button_fieldset :user_type,
        choices: Steps::Details::UserTypeForm.choices,
        legend_options: {class: 'visuallyhidden'} %>

      <%= render partial: 'steps/shared/continue_or_save', locals: {f: f} %>
    <% end %>

    <%= render partial: 'steps/shared/representative_explanation' %>
  </div>
</div>

<% content_for(:javascripts) do %>
  <script type="text/javascript">
    $(document).ready(function () {
        moj.gtmDataLayerEvent.init('UserType_Form', 'userType');
      });
  </script>
<% end %>
