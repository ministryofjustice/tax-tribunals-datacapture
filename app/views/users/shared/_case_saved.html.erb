<% if email_address %>
  <p class="govuk-body-l"><%= t '.lead_text_html', email_address: email_address %></p>
<% end %>

<p class="govuk-body"><%= t('.expire_warning_html', expire_in_days: Rails.configuration.x.cases.expire_in_days) %></p>

<p class="govuk-body"><%= t('.await_confirmation') %></p>

<h2 class="govuk-heading-m"><%=t ('.no_email_heading') %></h2>

<p class="govuk-body"><%=t('.no_email_junk') %></p>

<p class="govuk-body"><%=t('.no_email_invalid_entry_html') %>
  <%= link_to t('.no_email_invalid_entry_link'), users_login_restart_account_creation_path, method: :delete %>.
</p>

<p class="govuk-body"><%=t('.no_email_signed_out') %></p>
<br>



<%- if current_user %>
  <p class="govuk-body"><%=t '.continue_hint' %></p>
  <%= link_to t('.continue'), session['next_step'], class: 'govuk-button' %>
<% else %>
  <p class="govuk-body"><%=t '.return_info' %></p>
<% end %>