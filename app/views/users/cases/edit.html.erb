<% title t('.page_title') %>

<%= form_for @tribunal_case, url: users_case_path do |f| %>
  <%= f.govuk_text_field :user_case_reference, width: 'one-half',
                         label: { text: t('.heading'), size: 'l' }, hint: { text: t('.lead_text') }
  %>

  <%= f.submit class: 'govuk-button' %>
  <%= link_to t('helpers.submit.cancel'), users_cases_path, class: 'govuk-button govuk-button--secondary' %>
<% end %>
